{
  "name": "rsp-iras-qa",
  "version": "1.0.0",
  "description": "Test Automation for the IRAS project, which will provide E2E UI Regression Testing",
  "main": "index.js",
  "scripts": {
    "test": "npx bddgen && npx playwright test",
    "test-failed": "npx bddgen && npx playwright test --last-failed",
    "lint": "npx eslint .",
    "lint-fix": "npx eslint . --fix",
    "format": "npx prettier --write src/utils/Encrypt.mjs",
    "validate": "npm-run-all --parallel format lint",
    "precommit": "npm run lint"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.4.0",
    "@playwright/test": "^1.44.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^20.12.12",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "npm-run-all": "^4.1.5",
    "playwright-bdd": "^6.4.0",
    "prettier": "^3.3.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.13.0"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "playwright": "^1.44.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit"
    }
  }
}